@model ClinicStatus.ViewModels.DoctorPageViewModel

@{
    ViewData["Title"] = Model.clinic.Name;
}



<br />

<div class="row">
    <div class="col-xs-2">

        <div class="text-center" style="float:right; color:darkred; align-items:center"><h1>@Model.clinic.Name</h1></div>
        <br />
        <br />
        <br />
        <hr />
        <br />
        <br />
        <br />
     
        <a href="/Home/Index" class="btn btn-primary btn-block active" role="button" aria-pressed="true"><h4>عــودة</h4> </a>
    </div>

    <div class="col-xs-1"></div>

    <div class="col-xs-9">

        <table class="table  table-hover table-bordered" dir="rtl">
            <thead>
                <tr class="bg-info">
                    <th class="text-center col-xs-4" style="vertical-align:middle"><h4><b>اسم الطبيب</b></h4> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Doctor in Model.Doctors)
                {
                    if (Doctor.status == false)
                    {
                        <tr class="danger">
                            <td class="text-center col-xs-4" style="vertical-align:middle"><h4><b>@Doctor.Name</b></h4></td>
                            <td class="text-center col-xs-2" style="vertical-align:middle">
                                <a class="btn btn-primary" href="/Home/Change/@Doctor.Code"><h4><b>فـــتـــح</b></h4></a>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr class="success">
                            <td class="text-center col-xs-4" style="vertical-align:middle"><h4><b>@Doctor.Name</b></h4></td>
                            <td class="text-center col-xs-2" style="vertical-align:middle">
                                <a class="btn btn-primary" href="/Home/Change/@Doctor.Code"><h4><b>إغـــلاق</b></h4></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
                </table>
            </div>    
        
    </div>

